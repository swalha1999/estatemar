{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "pnpm db:migrate && tsup",
		"check-types": "tsc -b",
		"type-check": "tsc -b",
		"type-check:watch": "tsc -b --watch",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"clean": "rm -rf dist/",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:start": "docker compose up -d",
		"db:watch": "docker compose up",
		"db:stop": "docker compose stop",
		"db:down": "docker compose down"
	},
	"dependencies": {
		"@better-auth/expo": "^1.3.26",
		"@hono/node-server": "^1.14.4",
		"@orpc/client": "^1.9.2",
		"@orpc/openapi": "^1.9.2",
		"@orpc/server": "^1.9.2",
		"@orpc/zod": "^1.9.2",
		"@repo/cloudflare-r2": "workspace:*",
		"better-auth": "^1.3.26",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.6",
		"drizzle-zod": "^0.8.3",
		"hono": "^4.9.9",
		"pg": "^8.16.3",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@types/node": "^22.0.0",
		"@types/pg": "^8.11.0",
		"drizzle-kit": "^0.31.4",
		"tsup": "^8.3.5",
		"tsx": "^4.19.0",
		"typescript": "^5.8.0"
	}
}
