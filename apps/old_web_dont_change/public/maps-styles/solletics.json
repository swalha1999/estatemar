{
	"version": 8,
	"name": "Solletics",
	"metadata": { "maputnik:renderer": "mlgljs" },
	"center": [0, 0],
	"zoom": 1,
	"bearing": 0,
	"pitch": 0,
	"sources": {
		"openmaptiles": {
			"type": "vector",
			"url": "https://tiles.openfreemap.org/planet"
		}
	},
	"sprite": "https://tiles.openfreemap.org/sprites/ofm_f384/ofm",
	"glyphs": "https://tiles.openfreemap.org/fonts/{fontstack}/{range}.pbf",
	"layers": [
		{
			"id": "Background",
			"type": "background",
			"minzoom": 0,
			"layout": { "visibility": "visible" },
			"paint": { "background-color": "rgba(116, 116, 116, 1)" }
		},
		{
			"id": "Water",
			"type": "fill",
			"source": "openmaptiles",
			"source-layer": "water",
			"filter": ["any", ["==", "class", "ocean"], ["==", "class", "sea"]],
			"layout": { "visibility": "visible" },
			"paint": {
				"fill-color": "rgba(255, 255, 255, 1)",
				"fill-opacity": ["match", ["get", "intermittent"], 1, 0.7, 1]
			}
		},
		{
			"id": "Disputed border",
			"type": "line",
			"source": "openmaptiles",
			"source-layer": "boundary",
			"minzoom": 0,
			"filter": [
				"all",
				["==", "admin_level", 2],
				["==", "maritime", 0],
				["==", "disputed", 1]
			],
			"layout": {
				"line-cap": "round",
				"line-join": "round",
				"visibility": "visible"
			},
			"paint": {
				"line-color": "hsl(0,0%,30%)",
				"line-dasharray": [2, 2],
				"line-width": {
					"stops": [[1, 1], [5, 1.5], [10, 2]]
				}
			}
		},
		{
			"id": "Country border",
			"type": "line",
			"source": "openmaptiles",
			"source-layer": "boundary",
			"minzoom": 0,
			"filter": [
				"all",
				["==", "admin_level", 2],
				["==", "disputed", 0],
				["==", "maritime", 0]
			],
			"layout": {
				"line-cap": "round",
				"line-join": "round",
				"visibility": "visible"
			},
			"paint": {
				"line-blur": {
					"stops": [[4, 0.5], [10, 0]]
				},
				"line-color": "hsl(0,0%,30%)",
				"line-width": {
					"stops": [[1, 1], [5, 1.5], [10, 2]]
				}
			}
		},
		{
			"id": "Country labels",
			"type": "symbol",
			"source": "openmaptiles",
			"source-layer": "place",
			"minzoom": 2.5,
			"maxzoom": 12,
			"filter": ["all", ["==", "class", "country"], ["!=", "iso_a2", "VA"]],
			"layout": {
				"symbol-sort-key": ["to-number", ["get", "rank"]],
				"text-field": "{name:en}",
				"text-font": ["Noto Sans Bold"],
				"text-max-width": 8,
				"text-padding": {
					"stops": [[1, 0], [4, 2]]
				},
				"text-size": [
					"interpolate",
					["linear", 1],
					["zoom"],
					0,
					8,
					1,
					10,
					4,
					["case", [">", ["get", "rank"], 2], 13, 15],
					8,
					["case", [">", ["get", "rank"], 2], 18, 22]
				],
				"visibility": "visible"
			},
			"paint": {
				"text-color": "hsl(0, 0%, 75%)",
				"text-halo-blur": 1,
				"text-halo-color": "rgba(0, 0, 0, 0.75)",
				"text-halo-width": 1
			}
		},
		{
			"id": "City labels",
			"type": "symbol",
			"source": "openmaptiles",
			"source-layer": "place",
			"minzoom": 5,
			"maxzoom": 16,
			"filter": ["==", "class", "city"],
			"layout": {
				"text-field": "{name:en}",
				"text-font": ["Noto Sans Regular"],
				"text-size": [
					"interpolate",
					["linear"],
					["zoom"],
					5,
					8,
					10,
					14,
					16,
					18
				],
				"visibility": "visible",
				"text-anchor": "center",
				"text-max-width": 8
			},
			"paint": {
				"text-color": "hsl(0, 0%, 75%)",
				"text-halo-blur": 1,
				"text-halo-color": "rgba(0, 0, 0, 0.75)",
				"text-halo-width": 1
			}
		},
		{
			"id": "City borders",
			"type": "line",
			"source": "openmaptiles",
			"source-layer": "boundary",
			"minzoom": 5,
			"maxzoom": 16,
			"filter": ["==", "admin_level", 4],
			"layout": {
				"line-cap": "round",
				"line-join": "round",
				"visibility": "visible"
			},
			"paint": {
				"line-color": "hsl(0, 0%, 60%)",
				"line-width": [
					"interpolate",
					["linear"],
					["zoom"],
					5,
					0.5,
					10,
					1,
					16,
					2
				],
				"line-opacity": 0.5
			}
		}
	],
	"id": "dark"
}
