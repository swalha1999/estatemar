{
	"compilerOptions": {
		"target": "es2022",
		"module": "esnext",
		"moduleResolution": "bundler",
		"allowJs": true,
		"declaration": true,
		"outDir": "./lib",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"useUnknownInCatchVariables": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"]
}
