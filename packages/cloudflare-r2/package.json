{
	"name": "@repo/cloudflare-r2",
	"version": "0.5.0",
	"description": "S3 wrapper for Cloudflare R2.",
	"main": "./lib/index.js",
	"scripts": {
		"build": "pnpm clean && tsc",
		"build:watch": "pnpm clean && tsc --watch",
		"check-types": "tsc --noEmit",
		"clean": "rimraf lib/",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"lint": "biome check ."
	},
	"keywords": [
		"cloudflare",
		"r2",
		"cloud",
		"storage"
	],
	"files": [
		"lib/"
	],
	"exports": {
		".": {
			"types": "./lib/index.d.ts",
			"import": "./lib/index.js",
			"require": "./lib/index.js"
		},
		"./types": {
			"types": "./lib/types.d.ts",
			"import": "./lib/types.js",
			"require": "./lib/types.js"
		}
	},
	"license": "ISC",
	"author": "Surya Oktafendri <dev@f2face.com>",
	"repository": {
		"type": "git",
		"url": "https://github.com/f2face/cloudflare-r2.git"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.842.0",
		"@aws-sdk/lib-storage": "^3.842.0",
		"@aws-sdk/s3-request-presigner": "^3.842.0"
	},
	"devDependencies": {
		"@types/jest": "^29.5.14",
		"@types/node": "^22.0.0",
		"dotenv": "^16.4.5",
		"jest": "^29.7.0",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.2.5",
		"typescript": "^5.8.0"
	}
}
