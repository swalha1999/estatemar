{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"allowJs": true,
		"declaration": true,
		"outDir": "./lib",
		"rootDir": "./src",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"useUnknownInCatchVariables": true,
		"skipLibCheck": true,
		"composite": true
	},
	"include": ["src/**/*.ts"]
}
